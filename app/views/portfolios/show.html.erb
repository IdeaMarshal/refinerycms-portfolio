<% content_for :body_content_title do %>
  <%= @portfolio.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @portfolio.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @portfolio.description %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @portfolio.picture, nil %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @portfolio.url %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="portfolios">
      <% @portfolios.each do |portfolio| %>
        <li>
          <%= link_to portfolio.title, portfolio_path(portfolio) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
